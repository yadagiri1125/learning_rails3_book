<h1>Listing products</h1>

    <table>
      <tr class='header_section'>
        <th>Name</th>
        <th>Secret</th>
        <th>Country</th>
        <th>Email</th>
        <th>Description</th>
        <th>Can send email</th>
        <th>Graduation year</th>
        <th>Body temperature</th>
        <th>Price</th>
        <th>Birthday</th>
        <th>Favorite time</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

<% @products.each do |product| %>
  <tr class= 'body_section'>
    <td><%= product.name %></td>
    <td><%= product.secret %></td>
    <td><%= product.country %></td>
    <td><%= product.email %></td>
    <td><%= product.description %></td>
    <td><%= product.can_send_email %></td>
    <td><%= product.graduation_year %></td>
    <td><%= product.body_temperature %></td>
    <td><%= product.price %></td>
    <td><%= product.birthday %></td>
    <td><%= product.favorite_time %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

